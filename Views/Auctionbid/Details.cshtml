@model IEnumerable<RetroGamesAuction1.Models.ViewModel.ListViewModel>
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ставки лота</h1>
<table  id="table" class="table-rounded table-bordered col-sm-12" style="" >
    <thead>
        <tr>
             <th scope ="col">
                Id aукциона
            </th scope ="col">
            
             <th scope ="col">
                Пользователь
            </th>
                        
            <th scope ="col">
                Товар
            </th>
            <th scope ="col">
                Изображение
            </th scope ="col">

            <th scope ="col">
                Ставка
            </th>
            <th scope ="col">
                Время ставки
            </th>
            
            <th scope ="col">
                Время завершения аукциона
            </th>
             <th scope ="col">
                Статус
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdAuction)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.ClientName)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    <img class="imgpr" src="/@item.ProductPic" width="100" height="100" alt="картинка" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BidSum)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Datatime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endtime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                
                
            </tr>

            
        }
    </tbody>
</table>


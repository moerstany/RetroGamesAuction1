@model IEnumerable<RetroGamesAuction1.Models.ViewModel.ListViewModel>
@{
    ViewData["Title"] = "Index";
    
}
<header>
    <script src="/js/site.js"></script>
    
    @*<meta http-equiv="refresh" content="2">*@
</header>
@if (@TempData["AlertMessage"] != null)
{
  <div class="alert alert-secondary">
    <strong>Ура! </strong>@TempData["AlertMessage"]
</div>  
}
<br />
<div>
    @using (Html.BeginForm("Index", "Auction", FormMethod.Get))
    {
        <table>
            <tr>
                <td>
                    <span><b>Поиск по: </b></span>
                    @Html.RadioButton("searchBy","ProductName",true)
                    <text>Название продукта</text>
                    @Html.RadioButton("searchBy","Articul",true)
                    <text>Артикул</text>
                    @Html.RadioButton("searchBy","BeginBid")
                    <text>Начальная ставка</text>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBox("searchValue",null,new {Class = "form-control",placeholder = "Введите значение поиска"})
                </td>
                <td>
                    <input type="submit" value="Поиск" class="btn btn-outline-success"/>
                </td>
            </tr>
        </table>
    }
</div>

<br />

<div class="row">
		@foreach (var item in Model)
		{
			<div class="card p-3 m-3 col-4" id="card1">
            <img src="@item.ProductPic" class="img-fluid"  alt="...">
				<div class="card-body">
                    <p class="card-text">Артикул: @item.Articul</p>
					<h5 class="card-title">@item.ProductName</h5>
					
                    <h5 class="card-title">Начальная ставка @item.Beginbid  руб.</h5>
              

                
				</div>
            
                <div class="card-footer">
                @if (@item.Endtime > item.DateTime)
                {
                    <a asp-action="AddBid" asp-controller="Auctionbid" asp-route-id="@item.IdAuction" class="btn btn-outline-primary">Поставить</a>
                }

                <a asp-action="Details" asp-controller="Auction" asp-route-id="@item.IdAuction" class="btn btn-outline-primary">Подробности</a>
                </div>



			</div>
        
			
		}

</div>

<script src="/js/site.js"></script>
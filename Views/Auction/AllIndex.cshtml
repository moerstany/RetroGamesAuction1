@model IEnumerable<RetroGamesAuction1.Models.ViewModel.ListViewModel>
@{
    ViewData["Title"] = "AllIndex";
}
<br />
<h3>Аукционы</h3>


   
@if (@TempData["AlertMessage"] != null)
{
  <div class="alert alert-secondary">
    <strong>Ура! </strong>@TempData["AlertMessage"]
</div>  
}
<br />
<div class="align-self-lg-center">
    @using (Html.BeginForm("Index", "Auction", FormMethod.Get))
    {
        <table>
            <tr>
                <td>
                    <span><b>Поиск по: </b></span>
                    @Html.RadioButton("searchBy","ProductName",true)
                    <text>Название продукта</text>
                    @Html.RadioButton("searchBy","Articul",true)
                    <text>Артикул</text>
                    @Html.RadioButton("searchBy","BeginBid")
                    <text>Начальная ставка</text>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBox("searchValue",null,new {Class = "form-control",placeholder = "Введите значение поиска"})
                </td>
                <td>
                    <input type="submit" value="Поиск" class="btn btn-outline-success"/>
                </td>
            </tr>
        </table>
    }
</div>
<br />
 <a href="@Url.Action("Create","Auction","Auction")" class="btn btn-outline-primary">Создать</a>
 <br />
<table  id="table" class="table-rounded table-bordered col-sm-12" style="" >
    <thead>
        <tr>
             <th scope ="col">
                Id aукциона
            </th scope ="col">
            
            <th scope ="col">
                Изображение
            </th scope ="col">
            <th>
                Артикул
            </th>
            <th scope ="col">
                Товар
            </th>
            <th scope ="col">
                Описание товара
            </th>
            <th scope ="col">
                Начальная ставка
            </th>
            <th scope ="col">
                Начало аукциона
            </th>
            <th scope ="col">
                Окончание аукциона
            </th>
             <th scope ="col">
                Изменение
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdAuction)
                </td>
                
                <td>
                    <img src="/@item.ProductPic" width="100" height="100" alt="картинка" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Articul)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Beginbid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Begintime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endtime)
                </td>
                <td> 
                    <a href="@Url.Action("Edit","Auction",new {@id=item.IdAuction})" class="btn btn-outline-primary col-12">Изменить</a>
                    <hr />
                    <a href="@Url.Action("Delete","Auction",new {@id=item.IdAuction})" class="btn btn-outline-danger col-12" onclick="return confirm('Вы правда хотите удалить продукт? @item.ProductName?')">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
